<center>
<div class="container">
  <h2>Cria nova conta</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li>
              <div class="materialert">
                <i class="material-icons">error_outline</i>
                <span><%= message %></span>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='row'>
      <div class="input-field col s12">
        <%= f.text_field :name, autofocus: true, class: 'validate' %>
        <label for='user_name'>Nome</label>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
        <%= f.email_field :email, autofocus: true, class: 'validate' %>
        <label for='user_email'>Email</label>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
        <%= f.password_field :password, class: 'validate' %>
        <label for='user_password'>Senha</label>
      </div>
      <label style='float: right;'>
        <%= link_to "JÃ¡ tem login?", new_session_path(resource_name), class: 'pink-text' %><br />
      </label>
    </div>

    <br />
    <center>
      <div class='row'>
        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Criar</button>
      </div>
    </center>
</div>
</div>
</center>
<% end %>
