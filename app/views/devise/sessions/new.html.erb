<center>
<div class="container">
  <h2>Entrar</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

    <div class='row'>
      <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true, class: 'validate' %>
      <label for='user_email'>Email</label>
    </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
        <%= f.password_field :password, class: 'validate' %>
        <label for='user_password'>Senha</label>
      </div>
      <label style='float: right;'>
        <%= link_to "Criar nova conta", new_registration_path(resource_name), class: 'pink-text' %><br />
      </label>
    </div>

    <br />
    <center>
      <div class='row'>
        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Entrar</button>
      </div>
    </center>
</div>
</div>
</center>
<% end %>
