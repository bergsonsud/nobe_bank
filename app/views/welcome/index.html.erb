<%= "Olá #{current_user.name} você ainda não tem nenhuma conta, deseja solicitar uma nova conta?"%>

<br>


<%= form_tag url_for(:controller => 'account', :action => 'create'), :method => 'post' do  %>
<ul class="collapsible">
  <li>
    <div class="collapsible-header"><i class="material-icons">filter_drama</i>Nova conta</div>
    <div class="collapsible-body">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">

            <%= text_field_tag 'amount',0, class: 'validate value' %>
              <label for="#amount" data-error="wrong" data-success="right">Quanto você deseja depositar para abertura da sua conta?</label>
            </div>
          </div>
        </form>
        <%= submit_tag 'Solicitar', :class => 'col s6 btn btn-large waves-effect indigo'%>
      </div>
    </div>

  </li>

</ul>
<%end%>
