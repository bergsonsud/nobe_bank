<div class="card">
  <div class="card-content">
  	 <h3>Transação</h3>
    <div class="row">
      <div class="col s12 m6 <%= @transaction.recent ? "" : "hidden"%>">
        <div class="materialert success">
          <div class="material-icons">check</div>
          Operação realizada com sucesso!
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m6">
        <div class="card">
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
            <%= render 'transactions/transaction_symbol', transaction: @transaction %>
            <%= render 'transactions/transaction_type', transaction: @transaction %><br>
            <%= render 'transactions/transaction_recipient_data', transaction: @transaction %>
            </span>
          </div>
          <div class="card-action">
            <%= render 'transactions/transaction_value', transaction: @transaction %>
          </div>

          <% if !@transaction.description.nil? %>
            <div class="card-action">
              <i class="transfer-description"><%= @transaction.description %></i><br>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
