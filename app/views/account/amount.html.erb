<%=render 'composer/transactions/report_options'%>
<div class="card">
  <div class="card-content">
    <h3>Extrato</h3>

    <% @dates.each  do |date| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card">
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <%=date.strftime("%d/%m/%Y")%>
              </span>
            </div>
            <% @transactions.where('date = ?',date).each  do |transaction| %>
              <%= render transaction %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
